@{
}


<h1>Add Employee</h1>
<form action="/employee/getformData">
    <div class="mb-3">
        <label for="fname" class="form-label">First Name</label>
        <input type="Text" class="form-control" id="fname" name="fname">
    </div>
    <div class="mb-3">
        <label for="mname" class="form-label">Middle Name</label>
        <input type="Text" class="form-control" id="mname" name="mname">
    </div>
    <div class="mb-3">
        <label for="lname" class="form-label">Last Name</label>
        <input type="Text" class="form-control" id="lname" name="lname">
    </div>
    <div class="mb-3">
        <label for="address" class="form-label">Address</label>
        <input type="Text" class="form-control" id="address" name="address">
    </div>
    <div class="mb-3">
        <label for="sex" class="form-label">Sex</label>
        <input type="Text" class="form-control" id="sex" name="sex">
    </div>
    <div class="mb-3">
        <label for="Salary" class="form-label">Salary</label>
        <input type="number" class="form-control" id="salary" name="salary">
    </div>
    <div class="mb-3 form-check">
        <label class="form-check-label" for="department">Department</label>
        <select name="deptId" id="department">
            @foreach (Department item in Model)
            {
                <option value="@item.DepartmentNumber">@item.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>